@using Models;
@{
    Layout = null;
    SYS_USER model = ViewBag.model;
}
<link rel="stylesheet" type="text/css" media="screen" href="~/lib/lib/layui/css/layui.css" />
<link rel="stylesheet" type="text/css" media="screen" href="~/lib/lib/layer-v3.1.1/theme/default/layer.css" />
<link rel="stylesheet" type="text/css" media="screen" href="~/lib/lib/layui/tb.css" />
<script src="~/lib/lib/timeselect/js/jquery-1.9.1.js"></script>
<script src="~/lib/lib/layui/layui.js"></script>
<script src="~/lib/jquery.cookie.js"></script>
@section Title{

}
<body>
    <form class="layui-form" action="">
        <input type="hidden" name="id" id="areaid" value="@(model==null?"":model.ID)" />
        <div class="layui-form-item">
            <label class="layui-form-label">用户名</label>
            <div class="layui-input-block" style="width: 200px;">
                <input type="text" name="username" id="username" required lay-verify="required" autocomplete="off" class="layui-input" value="@(model==null?"":model.USERNAME)">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">密码</label>
            <div class="layui-input-block" style="width: 200px;">
                <input type="password" name="password" id="password" required lay-verify="required" autocomplete="off" class="layui-input" value="@(model==null?"":model.PASSWORD)">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">邮箱</label>
            <div class="layui-input-block" style="width: 200px;">
                <input type="text" name="email" id="email" required lay-verify="required" autocomplete="off" class="layui-input" value="@(model==null?"":model.EMAIL)">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">区域</label>
            <div class="layui-input-block" style="width: 200px;">
                <input type="text" name="area" id="area" required lay-verify="required" autocomplete="off" class="layui-input" value="@(model==null?0:model.AREA)">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">添加时间</label>
            <div class="layui-input-block" style="width: 200px;">
                <input type="text" name="updatetime" id="updatetime" required lay-verify="required" autocomplete="off" class="layui-input" value="@(model==null?"":model.UPDATETIME.ToString("yyyy-MM-dd"))">
            </div>
        </div>
    </form>
</body>
<script>
    //Demo
    layui.use('form', function () {
        var form = layui.form;

        //监听提交
        form.on('submit(formDemo)', function (data) {
            layer.msg(JSON.stringify(data.field));
            return false;
        });
    });
</script>
